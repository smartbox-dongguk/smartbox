<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zyd.myapplication.view.BaseTitleLayout
        android:id="@+id/base_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:background="@drawable/bk_black"
            android:layout_centerInParent="true">

            <LinearLayout
                android:id="@+id/valve_1"
                android:layout_width="wrap_content"
                android:layout_height="145dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_centerHorizontal="true">
                <View
                    android:id="@+id/valve_1_view"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:background="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/valve_2"
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_centerVertical="true">
                <View
                    android:id="@+id/valve_2_view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/valve_3"
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true">
                <View
                    android:id="@+id/valve_3_view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/valve_4"
                android:layout_width="wrap_content"
                android:layout_height="145dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true">
                <View
                    android:id="@+id/valve_4_view"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/black" />
            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>